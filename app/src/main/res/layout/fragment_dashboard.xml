<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dashboard_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:id="@+id/aantal_keren_te_laat_tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aantal keren te laat:"
            android:textSize="25sp"/>
        <TextView
            android:textSize="25sp"
            android:id="@+id/aantal_keren_te_laat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:id="@+id/aantal_keren_te_laat_trimester_tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waarvan deze trimester:"
            android:textSize="25sp"/>
        <TextView
            android:textSize="25sp"
            android:id="@+id/aantal_keren_te_laat_trimester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:id="@+id/aantal_tot_nablijven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nog ? keer te laat tot nablijven"
            android:textSize="23sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nablijven_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Nablijven"
            android:textSize="25sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/nablijven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Kon geen gegevens ophalen"
            android:textAlignment="center"/>
    </LinearLayout>





</LinearLayout>